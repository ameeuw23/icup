{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <h2 style="margin-bottom: 0">
        <i class="fa fa-lock"></i>&nbsp;
        {% trans from "club" %}FORM.LOGIN.TITLE{% endtrans %}
    </h2>
    <p>{% trans from "club" %}FORM.LOGIN.PROMPT{% endtrans %}</p>
    <div class="row">
        <div class="col-sm-5">
            <button type="button" onclick="window.location='{{ hwi_oauth_login_url('facebook') }}'" class="btn btn-facebook btn-lg" role="button">
                <div class="row">
                    <div class="col-xs-2"><i class="fa fa-facebook-f"></i></div>
                    <div class="col-xs-10">{% trans from "club" %}FORM.LOGIN.FACEBOOK{% endtrans %}</div>
                </div>
            </button>
            <p></p>
            <button type="button" onclick="window.location='{{ hwi_oauth_login_url('google') }}'" class="btn btn-google btn-lg" role="button">
                <div class="row">
                    <div class="col-xs-2"><i class="fa fa-google-plus"></i></div>
                    <div class="col-xs-10">{% trans from "club" %}FORM.LOGIN.GOOGLE{% endtrans %}</div>
                </div>
            </button>
            <p></p>
            <p>{% trans from "club" %}FORM.LOGIN.OR{% endtrans %}</p>
            <p></p>
            {% if error %}
                <h2><span class="label label-danger"><i class="fa fa-user-secret"></i>&nbsp;{{ error.messageKey|trans(error.messageData, 'security') }}</span></h2>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <label class="control-label required" for="username">{{ 'security.login.username'|trans }}</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label required" for="password">{{ 'security.login.password'|trans }}</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-key"></i>
                        </span>
                        <input class="form-control" type="password" id="password" name="_password" required="required" />
                    </div>
                </div>


                <div class="form-group">
                    <input class="form-inline" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default btn-lg" role="button" />
            </form>
        </div>
        <div class="col-sm-5">
            <p>{% trans from "club" %}FORM.LOGIN.SECTION1.TEXT{% endtrans %}</p>
            <p />
            <p><a href="{{ path('fos_user_resetting_request') }}" class="btn btn-default btn-lg" role="button">{% trans from "club" %}FORM.LOGIN.LOSTPWD{% endtrans %}</a></p>
            <p />
            <p>{% trans from "club" %}FORM.LOGIN.SECTION2.TEXT{% endtrans %}</p>
            <p>
                <button type="button" onclick="window.location='{{ path('fos_user_registration_register') }}'" class="btn btn-mostwantedresponse btn-lg" role="button">
                    <div class="row">
                        <div class="col-xs-2"><i class="fa fa-envelope"></i></div>
                        <div class="col-xs-10">{% trans from "club" %}FORM.LOGIN.REGISTER{% endtrans %}</div>
                    </div>
                </button>
{#
                <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#register">
                    {% trans from "club" %}FORM.LOGIN.REGISTER{% endtrans %}
                </button>
#}
            </p>
        </div>
    </div>
{% endblock fos_user_content %}

{% block body %}
    <!-- Modal -->
    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">{% trans from "club" %}FORM.REGISTER.TITLE{% endtrans %}</h4>
                </div>
                <div class="modal-body">
                    <button type="button" onclick="window.location='{{ hwi_oauth_login_url('facebook') }}'" class="btn btn-facebook" role="button">
                        <div class="row">
                            <div class="col-xs-1"><i class="fa fa-facebook-f"></i></div>
                            <div class="col-xs-11">{% trans from "club" %}FORM.REGISTER.REGISTER_FACEBOOK{% endtrans %}</div>
                        </div>
                    </button>
                    <p></p>
                    <button type="button" onclick="window.location='{{ hwi_oauth_login_url('google') }}'" class="btn btn-google" role="button">
                        <div class="row">
                            <div class="col-xs-1"><i class="fa fa-google-plus"></i></div>
                            <div class="col-xs-11">{% trans from "club" %}FORM.REGISTER.REGISTER_GOOGLE{% endtrans %}</div>
                        </div>
                    </button>
                    <p></p>
                    <button type="button" onclick="window.location='{{ path('fos_user_registration_register') }}'" class="btn btn-mostwantedresponse" role="button">
                        <div class="row">
                            <div class="col-xs-1"><i class="fa fa-envelope"></i></div>
                            <div class="col-xs-11">{% trans from "club" %}FORM.REGISTER.REGISTER_EMAIL{% endtrans %}</div>
                        </div>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{% trans from "club" %}FORM.REGISTER.CLOSE{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


