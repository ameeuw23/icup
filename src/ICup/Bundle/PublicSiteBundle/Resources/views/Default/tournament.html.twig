{% extends "base.html.twig" %}

{% block body %}
<h1 class="category">{{ tournament.name }}</h1>
<p class="subcategory">{% trans %}RESULTS{% endtrans %}</p>
<div style="text-align: right; width: 100%;">
    <a href="{{ path('_switch', { 'locale': 'en' }) }}">
        <img src="{{ imagepath }}/flags/gb.png" alt="{{ 'LANG.EN'|trans }}" title="{{ 'LANG.EN'|trans }}">
    </a>
    <a href="{{ path('_switch', { 'locale': 'it' }) }}">
        <img src="{{ imagepath }}/flags/it.png" alt="{{ 'LANG.IT'|trans }}" title="{{ 'LANG.IT'|trans }}">
    </a>
    <a href="{{ path('_switch', { 'locale': 'da' }) }}">
        <img src="{{ imagepath }}/flags/dk.png" alt="{{ 'LANG.DA'|trans }}" title="{{ 'LANG.DA'|trans }}">
    </a>
</div>
<div style="float: left; padding-right: 20px;">
    <table>
        <thead>
            <tr>
                <td>{% trans %}CATEGORIES{% endtrans %}</td>
            </tr>
        </thead>
        <tboby>
{% for category in categories %}
            <tr class="{{ cycle(['even','odd'],loop.index) }}">
                <td class="categories">
                    <a href="{{ path('_showcategory', { 'categoryid': category.id }) }}">
                        <b>{% trans %}CATEGORY{% endtrans %} {{ category.name }}</b>
                    </a><br />
                        {{ [category.gender,category.classification]|join|trans }}
                        {{ category.classification|trans }}
                </td>
            </tr>
{% endfor %}
        </tboby>
        <tfoot>
            <tr>
                <td colspan="1"></td>
            </tr>
        </tfoot>
    </table>
</div>
<div style="float: left;">
    <table>
        <thead>
            <tr>
                <td>{% trans %}PLAYGROUNDS{% endtrans %}</td>
            </tr>
        </thead>
        <tboby>
{% for playground in playgrounds %}
            <tr class="{{ cycle(['even','odd'],loop.index) }}">
                <td class="playgrounds">
                    <a href="{{ path('_showplayground_full', { 'playgroundid': playground.id }) }}">
                        {{ playground.name }}
                    </a>
                </td>
            </tr>
{% endfor %}
        </tboby>
        <tfoot>
            <tr>
                <td colspan="1"></td>
            </tr>
        </tfoot>
    </table>
</div>
{% endblock %}