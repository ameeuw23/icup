{% extends "ICupPublicSiteBundle:Masters:edit.html.twig" %}

{% form_theme form 'ICupPublicSiteBundle:Default:layout.script.html.twig' %}
{% trans_default_domain "admin" %}

{% block body %}
    <h2 style="margin-bottom: 0">
        <i class="fa fa-cogs"></i>&nbsp;{{ 'FORM.NEWPASS.TITLE'|trans|upper }}
    </h2>
    <p>
        {{ user.name|upper }}
    </p>
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>{% trans %}FORM.NEWPASS.CAPTION{% endtrans %}</h3>
                    <p>{% trans %}FORM.NEWPASS.PROMPT{% endtrans %}</p>
                </div>
                <div class="panel-body">
                {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}