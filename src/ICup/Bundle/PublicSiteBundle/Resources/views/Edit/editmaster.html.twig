{% extends "base.html.twig" %}

{% block body %}
<div class="admin">
    <h1 class="category">{{ tournament.name }}</h1>
    <p class="subcategory">
        {% trans %}ADMIN{% endtrans %}<br />
    </p>
    <div style="float: left; padding-right: 20px;">
        <table>
            <thead>
                <tr>
                    <td>{% trans %}CATEGORIES{% endtrans %}</td>
                </tr>
            </thead>
            <tboby>
    {% for category in categories %}
                <tr class="{{ cycle(['even','odd'],loop.index) }}">
                    <td class="categories">
                        <a href="{{ path('_editmenu', { 'categoryId': category.id, 'tournament': tournament.key }) }}">
                            <b>{% trans %}CATEGORY{% endtrans %} {{ category.name }}</b>
                        </a><br />
                            {{ [category.gender,category.classification]|join|trans }}
                            {{ category.classification|trans }}
                    </td>
                </tr>
    {% endfor %}
            </tboby>
            <tfoot>
                <tr>
                    <td colspan="1"></td>
                </tr>
            </tfoot>
        </table>
        <a href="{{ path('_editcategory', { 'tournament': tournament.key }) }}">
            <b>{% trans %}NEWCATEGORY{% endtrans %}</b>
        </a>
    </div>
</div>
{% endblock %}