{% extends "ICupPublicSiteBundle:Masters:edit.html.twig" %}
{% trans_default_domain "admin" %}

{% block adminbody %}
<h1>{% trans %}FORM.ADMIN{% endtrans %}</h1>
<p class="subtitle">{% trans %}FORM.LISTCLUBS.TITLE{% endtrans %}</p>
<div>
    <table>
        <caption>{% trans %}FORM.LISTCLUBS.CAPTION{% endtrans %}</caption>
        <thead>
            <tr>
                <td colspan="2">{% trans %}FORM.LISTCLUBS.LEGEND{% endtrans %}</td>
            </tr>
        </thead>
        <tboby>
{% if teams|length > 0 %}            
            <tr>
{% for column in teams %}
                <td class="column">
    {% for countries in column %}
    {% for country,teamlist in countries %}
    <table>
        <tr>
            <td class="country country_spacer">
                        <img src="{{ imagepath }}/flags/{{ flags[country] }}" alt="{{ country|trans({},'lang') }}" title="{{ country|trans({},'lang') }}">
                        <b>{{ country|trans({},'lang') }}</b>
            </td>
            <td class="operand country_spacer">
                        <a href="{{ path('_edit_club_add', {'country': country }) }}">+</a>
            </td>
            <td class="operand"></td>
            <td class="operand"></td>
            <td class="operand"></td>
        </tr>
        {% for id,club in teamlist %}
        <tr>
            <td class="clubname">
                        {{ club.name|upper }}
            </td>
            <td class="operand">
                        <a href="{{ path('_edit_club_add', {'country': country }) }}">+</a>
            </td>
            <td class="operand">
                        <a href="{{ path('_edit_club_chg', {'clubid': club.id }) }}">E</a>
            </td>
            <td class="operand">
                        <a href="{{ path('_edit_club_del', {'clubid': club.id }) }}">-</a>
            </td>
            <td class="operand">
                        <a href="{{ path('_edit_user_list', {'clubid': club.id }) }}">U</a><br />
            </td>
        </tr>
        {% endfor %}
    </table>
    {% endfor %}
    {% endfor %}
                </td>
{% endfor %}
            </tr>
{% else %}
        <tr>
            <td class="clubname">
                        <b><a href="{{ path('_edit_club_add') }}">{{'FORM.LISTCLUBS.NOCLUB'|trans|upper}}</a></b>
            </td>
            <td class="operand">
                        <a href="{{ path('_edit_club_add') }}">+</a>
            </td>
        </tr>
{% endif %}
        </tboby>
        <tfoot>
            <tr>
                <td colspan="2"></td>
            </tr>
        </tfoot>
    </table>
</div>
{% endblock %}