{% extends "ICupPublicSiteBundle:Masters:standard.html.twig" %}

{% block body %}
<h1 class="category">{% trans %}LOGIN{% endtrans %}</h1>
<p class="subcategory">
    {{ tournament.name }}
</p>
<div class="form_content">
    {% if error %}
        <div class="form_error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("_security_check") }}" method="post" id="login">
        <div class="form_row">
            <div class="form_label">
                <label for="username">{% trans %}USERNAME{% endtrans %}:</label>
            </div>
            <div class="form_widget">
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form_clear"></div>
        </div>
        <div class="form_row">
            <div class="form_label">
                <label for="password">{% trans %}PASSWORD{% endtrans %}:</label>
            </div>
            <div class="form_widget">
                <input type="password" id="password" name="_password" />
            </div>
            <div class="form_clear"></div>
        </div>
        <input type="submit" name="login" value="{% trans %}LOGIN{% endtrans %}" class="form_button" />
    </form>
</div>
{% endblock %}
