{% extends "ICupPublicSiteBundle:Masters:edit.html.twig" %}

{% form_theme form 'ICupPublicSiteBundle:Default:layout.script.html.twig' %}
{% trans_default_domain "club" %}

{% block adminbody %}
    <h2 style="margin-bottom: 0">
        <i class="fa fa-lock"></i>&nbsp;
        {% trans %}FORM.LOGIN.TITLE{% endtrans %}
    </h2>
    <p>{% trans %}FORM.LOGIN.PROMPT{% endtrans %}</p>
{% if tournament is defined and tournament %}
    <p><span class="label label-default">{{ tournament.name }}</span></p>
{% endif %}
{% if error is defined and error %}
    <h2><span class="label label-danger"><i class="fa fa-user-secret"></i>&nbsp;{{ ['ERROR',error.message|replace(' ','_')|replace('.','X')|upper]|join('.')|trans([],'errors') }}</span></h2>
{% endif %}
    <div class="row">
        <div class="col-sm-7">
            {{ form(form) }}
        </div>
        <div class="col-sm-5">
            <p>{% trans %}FORM.LOGIN.SECTION1.TEXT{% endtrans %}</p>
            <p />
            <a href="{{ path('_admin_lost_password') }}" class="btn btn-info" role="button">{% trans %}FORM.LOGIN.LOSTPWD{% endtrans %}&nbsp;<i class="fa fa-angle-double-right"></i></a>
        </div>
    </div>
</div>
{% endblock %}
