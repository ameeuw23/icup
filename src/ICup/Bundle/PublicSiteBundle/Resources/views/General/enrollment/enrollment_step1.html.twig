{% extends "ICupPublicSiteBundle:Masters:standard.html.twig" %}

{% form_theme form 'ICupPublicSiteBundle:Default:layout.script.html.twig' %}
{% trans_default_domain "club" %}

{% block widebody %}
    <div class="navy">
        <div class="container tall">
            <div class="lead">
                {{ sonata_block_render({'name': '/cms/content/blocks/enrollment/step1'}) }}
            </div>
        </div>
    </div>
    <div class="bg-dustblue silver">
        <div class="container tall">
            <div class="lead">
                <h2>{% trans %}FORM.ENROLLMENT.STEP1.TITLE{% endtrans %}</h2>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <p>{% trans %}FORM.ENROLLMENT.STEP1.HEADER1{% endtrans %}</p>
                        {{ form_row(form.club, {'type': 'text'}) }}
                        {{ form_row(form.address, {'type': 'text'}) }}
                        {{ form_row(form.city, {'type': 'text'}) }}
                        {{ form_row(form.country, {'type': 'text'}) }}
                        {{ form_row(form.email, {'type': 'email'}) }}
                    </div>
                    <div class="col-md-6">
                        <p>{% trans %}FORM.ENROLLMENT.STEP1.HEADER2{% endtrans %}</p>
                        {{ form_row(form.phone, {'type': 'tel'}) }}
                        {{ form_row(form.fax, {'type': 'tel'}) }}
                        {{ form_row(form.skype, {'type': 'text'}) }}
                        {{ form_row(form.website, {'type': 'text'}) }}
                        <p>{% trans %}FORM.ENROLLMENT.STEP1.HEADER3{% endtrans %}</p>
                        {{ form_row(form.membership) }}
                        {{ form_row(form.affiliation) }}
                        {{ form_row(form.championship) }}
                        {{ form_row(form.bestresult) }}
                    </div>
                </div>
                <hr class="border--silver" />
                <div class="row">
                    <div class="col-xs-12 text-right">{{ form_row(form.send) }}</div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}