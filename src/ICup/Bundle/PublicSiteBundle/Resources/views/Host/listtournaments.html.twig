            <td class="operand"></td>
            <td class="operand"></td>
            <td class="operand"></td>
        </tr>
    </thead>
    <tboby>
{% if tournaments|length > 0 %}
    {% for tournament in tournaments %}
        <tr class="{{ cycle(['even','odd'],loop.index) }}">
            <td>
                <a href="{{ path('_edit_tournament_chg', { 'tournamentid': tournament.id }) }}">
                {{ tournament.name }}
                </a>
            </td>
            <td></td>
            <td class="operand">
                <a href="{{ path('_edit_tournament_add', { 'hostid': host.id }) }}">
                +
                </a>    
            </td>
            <td class="operand">
                <a href="{{ path('_edit_tournament_chg', { 'tournamentid': tournament.id }) }}">
                E
