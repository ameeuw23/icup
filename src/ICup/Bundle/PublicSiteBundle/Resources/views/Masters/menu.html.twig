      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
-->
      <ul class="nav navbar-nav navbar-right">
        <li>
            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                <a href="{{ path('_user_my_page', {'_switch_user': '_exit'}) }}">{{ app.user.username|upper }} {% trans %}MENU.LOGOUT{% endtrans %}</a>
            {% else %}
                {% if app.user != null %}
                    <a href="{{ path('_admin_logout') }}">{{ app.user.username|upper }} {% trans %}MENU.LOGOUT{% endtrans %}</a>
                {% else %}
                    <a href="{{ path('_user_my_page') }}">{% trans %}MENU.LOGIN{% endtrans %}</a>
                {% endif %}
            {% endif %}
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">{% trans %}MENU.LANGCHOICE.TITLE{% endtrans %} <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <!-- Language section -->
            {% for local in supported_locales|keys %}
                {% set flag = countries[supported_locales[local]].flag %}
                {% set lang = ['LANG.',local|upper]|join|trans({}, 'common') %}
            <li>
                <a href="{{ path('_switch', { 'locale': local }) }}">
                    <img src="{{ imagepath }}/flags/{{ flag }}"
                         alt="{{ lang }}"
                         title="{% trans %}MENU.LANGCHOICE.CHOOSELANG{% endtrans %}: {{ lang }}"
                         class="flag"
                    />&nbsp;{{ lang }}
                </a>
            </li>
            {% endfor %}
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
{% endblock %}

{% block footer %}
{% endblock %}
