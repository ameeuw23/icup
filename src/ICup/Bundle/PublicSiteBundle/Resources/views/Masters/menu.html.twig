{% extends "ICupPublicSiteBundle:Masters:base.html.twig" %}

{% set flags = app.session.get('Countries') %}
{% set tmnt = app.session.get('Tournament') %}

{% block header %}
    <div class="menu">
        <div class="menu_header">
            <ul>
                <li><a href="{{ path('_tournament_overview', {'tournament': tmnt}) }}">{{ 'MENU.TOURNAMENT.OVERVIEW'|trans }}</a></li>
            </ul>
        </div>
        <div class="menu_header">
            <ul>
                <li><a href="{{ path('_tournament_overview', {'tournament': tmnt}) }}">{{ 'MENU.INFO.ABOUT'|trans }}</a></li>
            </ul>
        </div>
        <div class="menu_header">
            <ul>
                <li><a href="{{ path('_tournament_overview', {'tournament': tmnt}) }}">{{ 'MENU.INFO.FAQ'|trans }}</a></li>
            </ul>
        </div>
        <div class="menu_header last">
            <ul>
                <li>
                    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                        <a href="{{ path('_icup', {'_switch_user': '_exit'}) }}">{% trans %}MENU.EXIT{% endtrans %}</a>&nbsp;|&nbsp;
                    {% endif %}
                    {% if app.user != null %}
                        <a href="{{ path('_admin_logout') }}">{{ app.user.username|upper }} {% trans %}MENU.LOGOUT{% endtrans %}</a>
                    {% else %}
                        <a href="{{ path('_admin_login') }}">{% trans %}MENU.LOGIN{% endtrans %}</a>
                    {% endif %}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <div class="menu">
            <div class="menu_footer">
                <h3>{% trans %}MENU.LANGCHOICE.TITLE{% endtrans %}</h3>
                <ul>
                    {% for local in ['en','it','fr','de','es','po','da'] %}
                        {% set flag = flags[cycle(['GBR','ITA','FRA','DEU','ESP','POL','DNK'], loop.index0)] %}
                        {% set lang = ['LANG.',local|upper]|join|trans({}, 'common') %}
                    <li>
                        <a href="{{ path('_switch', { 'locale': local }) }}">
                            <img src="{{ imagepath }}/flags/{{ flag }}"
                                 alt="{{ lang }}"
                                 title="{% trans %}CHOOSELANG{% endtrans %}: {{ lang }}" />
                            &nbsp;{{ lang }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="menu_footer">
                <h3>{% trans %}MENU.TOURNAMENT.TITLE{% endtrans %}</h3>
                <ul>
                    <li><a href="{{ path('_tournament_overview', {'tournament': tmnt}) }}">{% trans %}MENU.TOURNAMENT.OVERVIEW{% endtrans %}</a></li>
                    <li><a href="{{ path('_tournament_categories', {'tournament': tmnt}) }}">{% trans %}MENU.TOURNAMENT.GROUPS{% endtrans %}</a></li>
                    <li><a href="{{ path('_tournament_playgrounds', {'tournament': tmnt}) }}">{% trans %}MENU.TOURNAMENT.PLAYGROUNDS{% endtrans %}</a></li>
                    <li><a href="{{ path('_tournament_clubs', {'tournament': tmnt}) }}">{% trans %}MENU.TOURNAMENT.TEAMS{% endtrans %}</a></li>
                    <li><a href="{{ path('_tournament_winners', {'tournament': tmnt}) }}">{% trans %}MENU.TOURNAMENT.WINNERS{% endtrans %}</a></li>
                    <li><a href="{{ path('_tournament_statistics', {'tournament': tmnt}) }}">{% trans %}MENU.TOURNAMENT.STATISTICS{% endtrans %}</a></li>
                </ul>
            </div>
            <div class="menu_footer">
                <h3>{% trans %}MENU.ENROLLMENT.TITLE{% endtrans %}</h3>
                <ul>
                    <li><a href="{{ path('_club_list') }}">{% trans %}MENU.ENROLLMENT.CLUBS{% endtrans %}</a></li>
                    <li><a href="{{ path('_club_enroll_list') }}">{% trans %}MENU.ENROLLMENT.TEAMS{% endtrans %}</a></li>
                    <li><a href="{{ path('_club_enroll_list') }}">{% trans %}MENU.ENROLLMENT.REFEREES{% endtrans %}</a></li>
                </ul>
            </div>
            <div class="menu_footer">
                <h3>{% trans %}MENU.ADMIN.TITLE{% endtrans %}</h3>
                <ul>
                    <li><a href="{{ path('_tournament_playgrounds', {'tournament': tmnt}) }}">{% trans %}MENU.ADMIN.RESULTS{% endtrans %}</a></li>
                    <li><a href="{{ path('_edit_host_list') }}">{% trans %}MENU.ADMIN.TOURNAMENT{% endtrans %}</a></li>
                    <li><a href="{{ path('_edit_club_list') }}">{% trans %}MENU.ADMIN.TEAMS{% endtrans %}</a></li>
                    <li><a href="{{ path('_edit_host_list') }}">{% trans %}MENU.ADMIN.PLAYERS{% endtrans %}</a></li>
                    <li><a href="{{ path('_edit_host_list') }}">{% trans %}MENU.ADMIN.REFEREES{% endtrans %}</a></li>
                </ul>
            </div>
    </div>
{% endblock %}
