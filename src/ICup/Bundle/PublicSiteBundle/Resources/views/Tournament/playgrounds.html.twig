{% extends "ICupPublicSiteBundle:Masters:standard.html.twig" %}
{% trans_default_domain "tournament" %}

{% block body %}
<p class="lead">
    {% trans %}PLAYGROUNDS{% endtrans %}
</p>
<div class="row">
{% if playgrounds|length > 0 %}
    {% for site in playgrounds|keys %}
        <div class="col-sm-4">
            <p class="lead">
                {{ site }}
            </p>
            <div class="list-group">
        {% for id,name in playgrounds[site] %}
                <a class="list-group-item" href="{{ path('_showplayground_full', { 'playgroundid': id }) }}">
                    <h4 class="list-group-item-heading">{{ name }}</h4>
                </a>
        {% endfor %}
            </div>
        </div>
    {% endfor %}
{% else %}
<h2 class="category">{% trans %}TOURNAMENTNOTREADY{% endtrans %}</h2>
{% endif %}
</div>
{% endblock %}