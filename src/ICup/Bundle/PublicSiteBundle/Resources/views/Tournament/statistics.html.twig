{% extends "ICupPublicSiteBundle:Masters:standard.html.twig" %}
{% trans_default_domain "tournament" %}

{% block body %}
<p class="lead">
    {% trans %}RESULTS{% endtrans %} {{ tournament.edition }}
</p>
<p class="lead">
    {% trans %}FORM.STATISTICS.TITLE{% endtrans %}
</p>
<div class="row">
{% for group,grouporder in order %}
    <div class="col-sm-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>{{ ['FORM.STATISTICS.GROUP.',group]|join()|upper|trans }}</td>
                    <td class="statistics">{% trans %}FORM.STATISTICS.LEGEND.FIGURE{% endtrans %}</td>
                </tr>
            </thead>
            <tboby>
    {% for key in grouporder %}
                <tr>
                    <td>{{ ['FORM.STATISTICS.KEY.',key]|join()|upper|trans }}</td>
                    <td class="statistics">{{ statistics[key] }}</td>
                </tr>
    {% endfor %}
            </tboby>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endfor %}
</div>
{% endblock %}