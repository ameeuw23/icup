{% extends "ICupPublicSiteBundle:Masters:standard.html.twig" %}
{% trans_default_domain "tournament" %}

{% block body %}
<p class="lead">
    {% trans %}RESULTS{% endtrans %} {{ tournament.edition }}
</p>
<ul class="nav nav-tabs" role="tablist">
    <li>
        <a href="{{ path('_tournament_winners', {'tournament': tournament.key }) }}">{{ 'WINNERS'|trans|upper }}</a>
    </li>
    <li class="active">
        <a href="{{ path('_tournament_winners_countries', {'tournament': tournament.key }) }}">{{ 'WINNING_COUNTRIES'|trans|upper }}</a>
    </li>
    <li>
        <a href="{{ path('_tournament_winners_clubs', {'tournament': tournament.key }) }}">{{ 'WINNING_CLUBS'|trans|upper }}</a>
    </li>
</ul>
{% if championlist|length > 0 %}
<p class="lead">
<table class="table table-striped">
    <thead>
        <tr>
            <td></td>
            <td class="winner_first winners_country">{% trans %}FIRST{% endtrans %}</td>
            <td class="winner_second winners_country">{% trans %}SECOND{% endtrans %}</td>
            <td class="winner_third winners_country">{% trans %}THIRD{% endtrans %}</td>
            <td class="winner_third winners_country">{% trans %}FORTH{% endtrans %}</td>
        </tr>
    </thead>
    <tboby>
    {% for ranks in championlist %}
        {% set country = ranks.country %}
        <tr>
            <td class="winner_team">
                <table>
                    <tr>
                        <td class="flag"><img src="{{ imagepath }}/flags/{{ countries[country].flag }}" alt="{{ country|trans({},'lang') }}" title="{{ country|trans({},'lang') }}"></td>
                        <td>{{ country|trans({},'lang') }}</td>
                    </tr>
                </table>
            </td>
            <td class="winners_country">
                {{ ranks.first }}
            </td>
            <td class="winners_country">
                {{ ranks.second }}
            </td>
            <td class="winners_country">
                {{ ranks.third }}
            </td>
            <td class="winners_country">
                {{ ranks.forth }}
            </td>
        </tr>
    {% endfor %}
    </tboby>
    <tfoot>
        <tr>
            <td colspan="5"></td>
        </tr>
    </tfoot>
</table>
</p>
{% else %}
<h2 class="category">{% trans %}NOWINNERS{% endtrans %}</h2>
{% endif %}
{% endblock %}